@{
    ViewData["Title"] = "Trang chủ";
}

<style>

    @@keyframes scrollDown {
        0% {
            top: 100%;
        }

        100% {
            top: -100%;
        }
    }

    .tooltip {
        display: none;
        position: absolute;
        background: #fff;
        padding: 5px 10px;
        border: 1px solid #ccc;
        font-size: 12px;
        pointer-events: none;
    }

    svg {
        background: #eafcff;
        font-family: sans-serif;
    }

    .point:hover + .tooltip {
        display: block;
    }

    text {
        font-size: 12px;
    }

    .label {
        font-weight: bold;
    }

    .subtitle {
        font-size: 14px;
        fill: #555;
    }
</style>
